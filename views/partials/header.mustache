<header>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <i class="toggle fas fa-bars"></i>
            </button>
            <a class="navbar-brand" href="/">
                <img class="logo" src="{{{global.logo}}}" class="d-inline-block align-top" alt="">
                <span>{{global.name}}</span>
            </a>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    {{#global.head-nav}}
                        <a class="nav-item nav-link active" href="{{link}}">{{text}}</a>
                    {{/global.head-nav}}
                    <a class="nav-item nav-link nav-search" href="#"><i class="fas fa-search"></i></a>
                </div>
                <form class="form-inline">
                    <input class="form-control search-input" type="search" placeholder="Search..." aria-label="Search">
                </form>
                <div class="ml-auto head-nav2">
                    {{#global.head-nav2}}
                        <a href="#">{{text}}</a>
                    {{/global.head-nav2}}
                </div>                        
            </div>
        </div>
    </nav> 
</header>